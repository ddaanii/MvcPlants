        </dd>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger done-btn" />
            <a asp-action="Index" class="back">Back to List</a>
        </form>
    </dl>
    
</div>
