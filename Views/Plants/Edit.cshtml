@model MvcPlants.Models.Plant

@{
    ViewData["Title"] = "Edit";
}

<style>
    body {
        background-color: antiquewhite;
        overflow-x: hidden;
    }

    .row {
        padding: 1rem 3rem;
        grid-area: 1/ !important;
    }

    h1 {
        font-size: 5rem;
        font-weight: 500;
        text-transform: uppercase;
        font-family: 'didot', serif;
        margin-left: 3rem;
        margin-right: 3rem;
        margin-bottom: 0;
    }
    .done-btn {
        background-color: lightcoral;
        border: none;
    }

    .done-btn:hover {
        background-color: crimson;
        border: 1px solid black;
    }

    .back {
        margin-left: 1rem;
        color: black;
        text-decoration: none;
    }

    .back:hover {
        color: crimson;
    }

    .form-group {
        margin-bottom: 1.5rem
    }

</style>

<h1>Edit</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImgPath" class="control-label"></label>
                <input asp-for="ImgPath" class="form-control" />
                <span asp-validation-for="ImgPath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Family" class="control-label"></label>
                <input asp-for="Family" class="form-control" />
                <span asp-validation-for="Family" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Genus" class="control-label"></label>
                <input asp-for="Genus" class="form-control" />
                <span asp-validation-for="Genus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Species" class="control-label"></label>
                <input asp-for="Species" class="form-control" />
                <span asp-validation-for="Species" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Origin" class="control-label"></label>
                <input asp-for="Origin" class="form-control" />
                <span asp-validation-for="Origin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary done-btn" />
                <a asp-action="Index" class="back">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
